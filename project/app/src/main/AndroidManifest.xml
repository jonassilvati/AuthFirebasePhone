<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jonas.firebaseauth">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ShowHistoricoActivity"
            android:label="Historico"
            android:parentActivityName=".ListHistorico"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jonas.firebaseauth.ListHistorico" />
        </activity>
        <activity
            android:name=".PersistHistorico"
            android:label="Salvar Historico"
            android:parentActivityName=".ListHistorico"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jonas.firebaseauth.ListHistorico" />
        </activity>
        <activity
            android:name=".ListHistorico"
            android:label="@string/title_activity_list_historico"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jonas.firebaseauth.HomeActivity" />
        </activity>
        <activity
            android:name=".ShowNomeActivity"
            android:label="Nome"
            android:parentActivityName=".ListNomes"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jonas.firebaseauth.ListNomes" />
        </activity>
        <activity
            android:name=".PersistNome"
            android:label="@string/title_activity_persist_nome"
            android:parentActivityName=".ListNomes"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jonas.firebaseauth.ListNomes" />
        </activity>
        <activity
            android:name=".ListNomes"
            android:label="@string/title_activity_list_nomes"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jonas.firebaseauth.HomeActivity" />
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".OTPActivity"
            android:label="@string/title_activity_otp"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jonas.firebaseauth.MainActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="PhoneAuth"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>